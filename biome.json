{
	"$schema": "https://biomejs.dev/schemas/2.2.3/schema.json",
	"files": {
		"ignoreUnknown": false,
		"includes": ["**/*.ts", "**/*.js", "**/*.json"]
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "off",
				"noDebugger": "off",
				"noConsole": "off",
				"noConfusingVoidType": "off"
			},
			"style": {
				"noNonNullAssertion": "off"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"indentWidth": 4,
		"lineWidth": 100
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"overrides": [
		{
			"includes": ["worker-configuration.d.ts"],
			"linter": {
				"enabled": false
			}
		}
	]
}
